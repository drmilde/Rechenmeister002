<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_0</item>
        <item name="colorPrimaryDark">@color/color_primary_3</item>
        <item name="colorAccent">@color/color_secondary_2_2</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_border</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/smallFontSize</item>
        <item name="android:textAlignment">center</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

        <item name="android:layout_marginRight">15dp</item>

    </style>

    <style name="buttonStyleSmall" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_border</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/smallFontSize</item>
        <item name="android:textAlignment">center</item>

        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>

        <item name="android:layout_marginRight">7dp</item>

    </style>

    <style name="answerStyle" parent="@style/buttonStyle">
        <item name="android:layout_width">170dp</item>
        <item name="android:textSize">@dimen/mediumFontSize</item>
    </style>

    <style name="excerciseStyle" parent="@style/buttonStyle">
        <item name="android:textSize">@dimen/largeFontSize</item>
    </style>

    <style name="headerStyle" parent="@style/buttonStyle">
        <item name="android:background">@drawable/header_border</item>
        <item name="android:textSize">@dimen/largeFontSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>



</resources>
