<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/color_secondary_1_2"
    android:padding="@dimen/smallSpacing"


    tools:context="com.example.milde.rechenmeister00.AuswahlDivisionActivity">

    <TextView
        android:id="@+id/tvDivision_Heading"
        style="@style/headerStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Division"

        android:layout_gravity="center"

        android:layout_marginBottom="@dimen/mediumSpacing"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btnAuswahlDivision_bis_20"
            style="@style/buttonStyle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ganzahlig bis 20"

            android:layout_marginBottom="@dimen/smallSpacing"
            android:layout_marginRight="0dp"
            />

        <Button
            android:id="@+id/btnAuswahlDivision_bis_100"
            style="@style/buttonStyle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ganzahlig bis 100"

            android:layout_marginBottom="@dimen/smallSpacing"
            android:layout_marginRight="0dp"
            />

        <Button
            android:id="@+id/btnAuswahlDivision_bis_400"
            style="@style/buttonStyle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ganzahlig bis 400"

            android:layout_marginBottom="@dimen/smallSpacing"
            android:layout_marginRight="0dp"
            />

        <Button
            android:id="@+id/btnAuswahlDivision_bis_1000"
            style="@style/buttonStyle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ganzahlig mit 10, 100, 1000"

            android:layout_marginBottom="@dimen/smallSpacing"
            android:layout_marginRight="0dp"
            />

    </LinearLayout>



</LinearLayout>
